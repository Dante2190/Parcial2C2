<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetalle">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProducto"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_photo_camera"
        app:civ_circle_background_color="#ffffff"
        app:civ_border_color="#EAE5E4"
        app:civ_border_width="5dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/suburImage"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_upload_photo" />

    <EditText
        android:id="@+id/edtCodigo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="214dp"
        android:inputType="number"
        android:hint="@string/codigo"/>
    <EditText
        android:id="@+id/edtDescrip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="284dp"
        android:inputType="text"
        android:hint="@string/descripcion"/>
    <EditText
        android:id="@+id/edtMarca"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="354dp"
        android:inputType="text"
        android:hint="@string/marca"/>

    <EditText
        android:id="@+id/edtPresen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="425dp"
        android:inputType="text"
        android:hint="@string/presentacion" />

    <EditText
        android:id="@+id/edtPrecio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="495dp"
        android:inputType="number"
        android:hint="@string/precio" />

    <Button
        android:id="@+id/btnProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="565dp"
        android:text="@string/guardar_productos"/>
    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="625dp"
        android:text="Mostrar Productos"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>